        </dependency>
    </dependencies>

    <!-- ðŸ”¹ ConfiguraciÃ³n de compilaciÃ³n y ejecuciÃ³n -->
    <build>
        <plugins>
            <!-- Plugin para ejecutar la app desde Maven -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>3.1.0</version>
                <configuration>
                    <mainClass>interfaces.pratica4.ventanaMixta</mainClass>
                </configuration>
